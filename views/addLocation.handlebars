<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Location:</h3>

    <form class="form new-location-form">
      <div class="form-group">
        <label for="location-name">Location Name:</label>
        <input class="form-input" type="text" id="location-name" name="location-name" />
      </div>
      <div class="form-group">
        <label for="location-phone">Location Phone:</label>
        <input class="form-input" type="text" id="location-phone" name="location-phone" />
      </div>
      <div class="form-group">
        <label for="location-address">Location Address:</label>
        <input class="form-input" type="text" id="location-address" name="location-address" />
      </div>
      <div class="form-group">
        <label for="location-url">Location URL:</label>
        <input class="form-input" type="text" id="location-url" name="location-url" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
      <div class="col-md-4">
      </div>
    </form>
  </div>

  {{#if location.length}}
  <div class="col-md-6 project-list">
    <h3>Current Locations:</h3>

    {{#each locations as |location|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/location/{{location.id}}">{{location.name}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script type="text/javascript" src="/js/addLocation.js"></script>