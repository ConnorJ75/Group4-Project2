<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location Page</title>
</head>
<body>

<!-- Handlebars template -->
<script id="location-template" type="text/x-handlebars-template">
    <header>
        <h1>{{ name }}</h1>
        <p>{{ city }}, {{ country }}</p>
    </header>
    <section>
        <p>{{ description }}</p>
    </section>
    <ul>
        {{#each amenities}}
            <li>{{ this }}</li>
        {{/each}}
    </ul>
</script>

<!-- Include Handlebars library -->
<script src="https://cdn.jsdelivr.net/npm/handlebars/dist/handlebars.min.js"></script>

<!-- Your script to render the template -->
